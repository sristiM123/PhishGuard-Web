{
  "manifest_version": 3,
  "name": "PhishGuard â€” Friendly Link Checker",
  "version": "4.0.0",
  "description": "Gently checks links on websites, emails and chats. Very risky links get smart popups; everything is summarized in a simple dashboard with Parent/Child modes.",
  "action": {
    "default_title": "PhishGuard",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "webRequest",
    "tabs",
    "contextMenus",
    "notifications",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["dashboard.html", "dashboard.js", "warning.html", "warning.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
